@page "/library"
@using SpotifyTools.Web.Services
@using SpotifyTools.Web.DTOs
@using Microsoft.JSInterop
@using Microsoft.AspNetCore.Components.Web

@inject IGenreService GenreService
@inject IPlaylistService PlaylistService
@inject IListeningAnalyticsService AnalyticsService
@inject IJSRuntime JS
@inject ILogger<Home> Logger
@inject NavigationManager Navigation

<PageTitle>Music Library</PageTitle>

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-auto">
            <button class="btn btn-outline-secondary" @onclick='() => Navigation.NavigateTo("/start")'>
                ‚Üê Back
            </button>
        </div>
        <div class="col">
            <h1>üéµ Music Library</h1>
        </div>
        <div class="col-auto">
            <button class="btn btn-primary" @onclick="RefreshData">
                <span class="@(isLoading ? "spinner-border spinner-border-sm" : "")"></span>
                Refresh
            </button>
        </div>
    </div>

    @if (isLoading && genres.Count == 0)
    {
        <div class="text-center p-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3">Loading your library...</p>
        </div>
    }
    else
    {
        <div class="row g-3">
            <!-- LEFT PANEL: Genre Filters -->
            <div class="col-md-3">
                <div class="card h-100">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">üìÇ Genres</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="list-group list-group-flush" style="max-height: 70vh; overflow-y: auto;">
                            @foreach (var genre in genres)
                            {
                                <button class="list-group-item list-group-item-action @(selectedGenre == genre.Name ? "active" : "")"
                                        @onclick="() => SelectGenre(genre.Name)">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span>@genre.Name</span>
                                        <span class="badge bg-secondary rounded-pill">@genre.TrackCount</span>
                                    </div>
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- CENTER PANEL: Track List -->
            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-header bg-success text-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">üéµ Tracks</h5>
                            @if (!string.IsNullOrEmpty(selectedGenre))
                            {
                                <span class="badge bg-light text-dark">@selectedGenre (@totalTrackCount tracks)</span>
                            }
                        </div>
                    </div>
                    <div class="card-body p-0">
                        @if (loadingTracks)
                        {
                            <div class="text-center p-4">
                                <div class="spinner-border text-success" role="status"></div>
                            </div>
                        }
                        else if (tracks.Count == 0)
                        {
                            <div class="p-4 text-center text-muted">
                                <p>Select a genre to view tracks</p>
                            </div>
                        }
                        else
                        {
                            <div class="track-list" style="max-height: 70vh; overflow-y: auto;">
                                @foreach (var track in tracks)
                                {
                                    <div class="list-group-item list-group-item-action @(selectedTracks.Contains(track.Id) ? "bg-light" : "")">
                                        <div class="d-flex align-items-start">
                                            <input type="checkbox" class="form-check-input me-3 mt-1"
                                                   checked="@selectedTracks.Contains(track.Id)"
                                                   @onchange="() => ToggleTrackSelection(track.Id)" />
                                            <div class="flex-grow-1">
                                                <div class="d-flex justify-content-between">
                                                    <strong style="cursor: pointer; color: #0d6efd;"
                                                            @onclick="() => ShowTrackDetails(track.Id)"
                                                            @onclick:stopPropagation="true">
                                                        @track.Name
                                                    </strong>
                                                    <small class="text-muted">@FormatDuration(track.DurationMs)</small>
                                                </div>
                                                <div class="text-muted small">
                                                    @string.Join(", ", track.Artists.Select(a => a.Name))
                                                </div>
                                                @if (!string.IsNullOrEmpty(track.AlbumName))
                                                {
                                                    <div class="text-muted small">
                                                        üíø @track.AlbumName
                                                    </div>
                                                }
                                                @if (track.Genres.Any())
                                                {
                                                    <div class="mt-1">
                                                        @foreach (var genre in track.Genres.Take(3))
                                                        {
                                                            <span class="badge bg-secondary me-1">@genre</span>
                                                        }
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>

                            @* Pagination Controls *@
                            @if (totalTrackCount > pageSize)
                            {
                                <div class="border-top p-3">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="text-muted small">
                                            Showing @((currentPage - 1) * pageSize + 1)-@Math.Min(currentPage * pageSize, totalTrackCount) of @totalTrackCount
                                        </div>
                                        <div>
                                            <button class="btn btn-sm btn-outline-secondary me-2"
                                                    @onclick="PreviousPage"
                                                    disabled="@(currentPage <= 1 || loadingTracks)">
                                                ‚Üê Previous
                                            </button>
                                            <span class="text-muted small">Page @currentPage of @totalPages</span>
                                            <button class="btn btn-sm btn-outline-secondary ms-2"
                                                    @onclick="NextPage"
                                                    disabled="@(currentPage >= totalPages || loadingTracks)">
                                                Next ‚Üí
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            }

                            @if (selectedTracks.Any())
                            {
                                <div class="card-footer bg-light">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span>@selectedTracks.Count selected</span>
                                        <div>
                                            <button class="btn btn-sm btn-secondary me-2" @onclick="ClearSelection">Clear</button>
                                            <button class="btn btn-sm btn-primary" @onclick="ShowAddToPlaylistModal">
                                                Add to Playlist
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>

            <!-- RIGHT PANEL: Playlists -->
            <div class="col-md-3">
                <div class="card h-100">
                    <div class="card-header bg-info text-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">üìã Playlists</h5>
                            <button class="btn btn-sm btn-light" @onclick="ShowCreatePlaylistModal">
                                + New
                            </button>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        @if (selectedPlaylist != null)
                        {
                            <!-- Playlist Detail View -->
                            <div class="p-3 border-bottom">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">@selectedPlaylist.Name</h6>
                                        @if (!string.IsNullOrEmpty(selectedPlaylist.Description))
                                        {
                                            <small class="text-muted">@selectedPlaylist.Description</small>
                                        }
                                    </div>
                                    <button class="btn btn-sm btn-outline-secondary" @onclick="ClearSelectedPlaylist">
                                        ‚úï
                                    </button>
                                </div>
                                <div class="text-muted small">
                                    <div>@playlistTracks.Count tracks</div>
                                    <div>@FormatTotalDuration(playlistTracks.Sum(t => t.DurationMs))</div>
                                </div>
                            </div>
                            
                            @if (loadingPlaylist)
                            {
                                <div class="text-center p-4">
                                    <div class="spinner-border spinner-border-sm text-info" role="status"></div>
                                    <p class="small mt-2">Loading tracks...</p>
                                </div>
                            }
                            else if (playlistTracks.Any())
                            {
                                <div style="max-height: 50vh; overflow-y: auto;">
                                    @foreach (var track in playlistTracks)
                                    {
                                        <div class="list-group-item list-group-item-action small">
                                            <div class="d-flex justify-content-between">
                                                <div class="flex-grow-1 text-truncate">
                                                    <div class="fw-bold text-truncate"
                                                         style="cursor: pointer; color: #0d6efd;"
                                                         @onclick="() => ShowTrackDetails(track.Id)">
                                                        @track.Name
                                                    </div>
                                                    <div class="text-muted text-truncate">
                                                        @string.Join(", ", track.Artists.Select(a => a.Name))
                                                    </div>
                                                </div>
                                                <small class="text-muted ms-2">@FormatDuration(track.DurationMs)</small>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="p-3 text-center text-muted small">
                                    This playlist is empty
                                </div>
                            }
                        }
                        else
                        {
                            <!-- Playlist List View -->
                            <div class="list-group list-group-flush" style="max-height: 70vh; overflow-y: auto;">
                                @foreach (var playlist in playlists)
                                {
                                    <button class="list-group-item list-group-item-action"
                                            @onclick="() => SelectPlaylist(playlist.Id)">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="flex-grow-1">
                                                <strong>@playlist.Name</strong>
                                                @if (!string.IsNullOrEmpty(playlist.Description))
                                                {
                                                    <div class="small text-muted text-truncate">@playlist.Description</div>
                                                }
                                            </div>
                                            <span class="badge bg-secondary rounded-pill">@playlist.TrackCount</span>
                                        </div>
                                    </button>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Track Details Modal -->
<TrackDetailsModal Track="selectedTrackDetails" IsVisible="showModal" OnClose="CloseModal" />

<!-- Add to Playlist Modal -->
<AddToPlaylistModal TrackIds="selectedTracks.ToList()" 
                    IsVisible="showAddToPlaylistModal" 
                    OnClose="CloseAddToPlaylistModal"
                    OnTracksAdded="OnTracksAddedToPlaylist" />

@code {
    private List<GenreDto> genres = new();
    private List<TrackDto> tracks = new();
    private List<PlaylistDto> playlists = new();
    private PlaylistDetailDto? selectedPlaylist;
    private List<TrackDto> playlistTracks = new();
    private HashSet<string> selectedTracks = new();
    private string? selectedGenre;
    private bool isLoading = true;
    private bool loadingTracks = false;
    private bool loadingPlaylist = false;

    // Track details modal state
    private TrackDetailsDto? selectedTrackDetails;
    private bool showModal = false;

    // Add to playlist modal state
    private bool showAddToPlaylistModal = false;

    // Pagination state
    private int currentPage = 1;
    private int pageSize = 100;
    private int totalTrackCount = 0;
    private int totalPages => totalTrackCount > 0 ? (int)Math.Ceiling((double)totalTrackCount / pageSize) : 0;

    protected override async Task OnInitializedAsync()
    {
        await RefreshData();
    }

    private async Task RefreshData()
    {
        isLoading = true;
        try
        {
            // Direct service calls - no HTTP overhead!
            genres = await GenreService.GetAllGenresAsync();
            playlists = await PlaylistService.GetAllPlaylistsAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading data");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task SelectGenre(string genreName)
    {
        selectedGenre = genreName;
        currentPage = 1;
        selectedTracks.Clear();
        await LoadTracksPageAsync();
    }

    private async Task LoadTracksPageAsync()
    {
        if (string.IsNullOrEmpty(selectedGenre))
            return;

        loadingTracks = true;
        StateHasChanged();

        try
        {
            // Direct service call with efficient database query
            var result = await GenreService.GetTracksByGenrePagedAsync(selectedGenre, page: currentPage, pageSize: pageSize);
            tracks = result.Items;
            totalTrackCount = result.TotalCount;
            Logger.LogInformation("Loaded page {Page} ({TrackCount} tracks) for genre {Genre}",
                currentPage, tracks.Count, selectedGenre);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading tracks for genre {Genre} page {Page}", selectedGenre, currentPage);
        }
        finally
        {
            loadingTracks = false;
            StateHasChanged();
        }
    }

    private async Task NextPage()
    {
        if (currentPage < totalPages)
        {
            currentPage++;
            await LoadTracksPageAsync();
        }
    }

    private async Task PreviousPage()
    {
        if (currentPage > 1)
        {
            currentPage--;
            await LoadTracksPageAsync();
        }
    }

    private void ToggleTrackSelection(string trackId)
    {
        if (selectedTracks.Contains(trackId))
            selectedTracks.Remove(trackId);
        else
            selectedTracks.Add(trackId);
    }

    private void ClearSelection()
    {
        selectedTracks.Clear();
    }

    private async Task SelectPlaylist(string playlistId)
    {
        loadingPlaylist = true;

        try
        {
            // Direct service call with efficient single query
            selectedPlaylist = await PlaylistService.GetPlaylistByIdAsync(playlistId);
            playlistTracks = selectedPlaylist?.Tracks ?? new List<TrackDto>();
            Logger.LogInformation("Loaded playlist {PlaylistName} with {TrackCount} tracks",
                selectedPlaylist?.Name, playlistTracks.Count);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading playlist {PlaylistId}", playlistId);
        }
        finally
        {
            loadingPlaylist = false;
            StateHasChanged();
        }
    }

    private void ClearSelectedPlaylist()
    {
        selectedPlaylist = null;
        playlistTracks.Clear();
    }

    private string FormatTotalDuration(int totalMs)
    {
        var duration = TimeSpan.FromMilliseconds(totalMs);
        if (duration.TotalHours >= 1)
        {
            return $"{(int)duration.TotalHours}h {duration.Minutes}m";
        }
        return $"{(int)duration.TotalMinutes}m {duration.Seconds}s";
    }

    private async Task ShowCreatePlaylistModal()
    {
        await JS.InvokeVoidAsync("alert", "Create playlist modal coming soon!");
    }

    private void ShowAddToPlaylistModal()
    {
        if (selectedTracks.Count > 0)
        {
            showAddToPlaylistModal = true;
        }
    }

    private void CloseAddToPlaylistModal()
    {
        showAddToPlaylistModal = false;
    }

    private async Task OnTracksAddedToPlaylist(bool success)
    {
        if (success)
        {
            // Refresh playlists to show updated track counts
            playlists = await PlaylistService.GetAllPlaylistsAsync();
            
            // Clear selection
            selectedTracks.Clear();
            
            StateHasChanged();
        }
    }

    private string FormatDuration(int durationMs)
    {
        var duration = TimeSpan.FromMilliseconds(durationMs);
        return $"{(int)duration.TotalMinutes}:{duration.Seconds:D2}";
    }

    private async Task ShowTrackDetails(string trackId)
    {
        try
        {
            selectedTrackDetails = await AnalyticsService.GetTrackDetailsAsync(trackId);
            if (selectedTrackDetails != null)
            {
                showModal = true;
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading track details for {TrackId}", trackId);
        }
    }

    private void CloseModal()
    {
        showModal = false;
        selectedTrackDetails = null;
    }
}
