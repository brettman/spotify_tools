@page "/playlists"
@using SpotifyTools.Web.Services
@using SpotifyTools.Web.DTOs

@inject IPlaylistService PlaylistService
@inject ILogger<Playlists> Logger
@inject NavigationManager Navigation

<PageTitle>Playlists</PageTitle>

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-auto">
            <button class="btn btn-outline-secondary" @onclick='() => Navigation.NavigateTo("/start")'>
                ‚Üê Back
            </button>
        </div>
        <div class="col">
            <h1>üìã Playlists</h1>
        </div>
        <div class="col-auto">
            <button class="btn btn-primary" @onclick="RefreshPlaylists" disabled="@isLoading">
                <span class="@(isLoading ? "spinner-border spinner-border-sm me-1" : "")"></span>
                Refresh
            </button>
        </div>
    </div>

    <!-- Search and Filter -->
    <div class="row mb-3">
        <div class="col-md-6">
            <div class="input-group">
                <span class="input-group-text">
                    <i class="bi bi-search"></i>
                </span>
                <input type="text"
                       class="form-control"
                       placeholder="Search playlists by name..."
                       @bind="searchQuery"
                       @bind:event="oninput"
                       @onkeyup="FilterPlaylists" />
                @if (!string.IsNullOrEmpty(searchQuery))
                {
                    <button class="btn btn-outline-secondary" @onclick="ClearSearch">
                        <i class="bi bi-x"></i>
                    </button>
                }
            </div>
        </div>
        <div class="col-md-3">
            <select class="form-select" @bind="filterType" @bind:after="FilterPlaylists">
                <option value="all">All Playlists (@allPlaylists.Count)</option>
                <option value="modified">Has Changes (@allPlaylists.Count(p => HasUnsyncedChanges(p)))</option>
                <option value="local">Local Only (@allPlaylists.Count(p => IsGuid(p.Id)))</option>
                <option value="synced">On Spotify (@allPlaylists.Count(p => !IsGuid(p.Id)))</option>
                <option value="empty">Empty Playlists (@allPlaylists.Count(p => p.TrackCount == 0))</option>
            </select>
        </div>
        <div class="col-md-3">
            <select class="form-select" @bind="sortBy" @bind:after="SortPlaylists">
                <option value="name">Sort by Name</option>
                <option value="tracks">Sort by Track Count</option>
                <option value="type">Sort by Type</option>
            </select>
        </div>
    </div>

    @if (isLoading && playlists.Count == 0)
    {
        <div class="text-center p-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3">Loading playlists...</p>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @errorMessage
        </div>
    }
    else if (playlists.Count == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle-fill me-2"></i>
            No playlists found. Create one from the <a href="/library">library page</a>.
        </div>
    }
    else
    {
        <!-- Success/Info Messages -->
        @if (!string.IsNullOrEmpty(successMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>
                @successMessage
                <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
            </div>
        }

        <!-- Playlists Table -->
        <div class="card">
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Status</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Tracks</th>
                            <th>Type</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var playlist in playlists)
                        {
                            var isSpotifyPlaylist = !IsGuid(playlist.Id);
                            var isSyncing = syncingPlaylists.Contains(playlist.Id);
                            var hasUnsyncedChanges = playlist.LastModifiedAt > playlist.LastSyncedAt;

                            <tr>
                                <td>
                                    @if (isSyncing)
                                    {
                                        <span class="spinner-border spinner-border-sm text-primary" role="status"></span>
                                    }
                                    else if (hasUnsyncedChanges && isSpotifyPlaylist)
                                    {
                                        <span class="badge bg-warning text-dark" title="Has local changes - click Push Updates to sync">
                                            <i class="bi bi-exclamation-triangle-fill"></i> Has Changes
                                        </span>
                                    }
                                    else if (isSpotifyPlaylist)
                                    {
                                        <span class="badge bg-success" title="Synced with Spotify">
                                            <i class="bi bi-check-circle-fill"></i> Synced
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary" title="Local only - not yet on Spotify">
                                            <i class="bi bi-laptop"></i> Local
                                        </span>
                                    }
                                </td>
                                <td>
                                    <strong>@playlist.Name</strong>
                                </td>
                                <td>
                                    <span class="text-muted">@(playlist.Description ?? "-")</span>
                                </td>
                                <td>
                                    <span class="badge bg-info rounded-pill">@playlist.TrackCount</span>
                                </td>
                                <td>
                                    @if (playlist.IsPublic)
                                    {
                                        <span class="badge bg-light text-dark">Public</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-dark">Private</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        @if (playlist.TrackCount > 0)
                                        {
                                            <button class="btn btn-sm @(isSpotifyPlaylist ? "btn-outline-success" : "btn-success")"
                                                    @onclick="() => SyncPlaylistToSpotify(playlist.Id)"
                                                    disabled="@isSyncing"
                                                    title="@(isSpotifyPlaylist ? "Update Spotify playlist with local changes" : "Create playlist on Spotify")">
                                                @if (isSyncing)
                                                {
                                                    <span class="spinner-border spinner-border-sm"></span>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-cloud-upload"></i>
                                                }
                                                @(isSpotifyPlaylist ? "Push Updates" : "Sync to Spotify")
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-outline-secondary" disabled title="Add tracks first">
                                                <i class="bi bi-exclamation-circle"></i> No Tracks
                                            </button>
                                        }

                                        <button class="btn btn-sm btn-outline-primary"
                                                @onclick="() => ViewPlaylist(playlist.Id)"
                                                title="View details">
                                            <i class="bi bi-eye"></i>
                                        </button>

                                        <button class="btn btn-sm btn-outline-danger"
                                                @onclick="() => DeletePlaylist(playlist.Id)"
                                                disabled="@isSyncing"
                                                title="Delete playlist">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Summary Stats -->
        <div class="row mt-3">
            <div class="col-md-4">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <h5 class="card-title">Total Playlists</h5>
                        <p class="display-6 mb-0">@playlists.Count</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-success text-white">
                    <div class="card-body text-center">
                        <h5 class="card-title">Synced to Spotify</h5>
                        <p class="display-6 mb-0">@playlists.Count(p => !IsGuid(p.Id))</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-secondary text-white">
                    <div class="card-body text-center">
                        <h5 class="card-title">Local Only</h5>
                        <p class="display-6 mb-0">@playlists.Count(p => IsGuid(p.Id))</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Playlist Detail Modal -->
@if (selectedPlaylistForView != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-music-note-list me-2"></i>
                        @selectedPlaylistForView.Name
                    </h5>
                    <button type="button" class="btn-close" @onclick="CloseDetailModal"></button>
                </div>
                <div class="modal-body">
                    @if (loadingDetail)
                    {
                        <div class="text-center py-4">
                            <div class="spinner-border text-primary" role="status"></div>
                            <p class="mt-2">Loading playlist details...</p>
                        </div>
                    }
                    else if (playlistDetail != null)
                    {
                        <div class="mb-3">
                            <p class="mb-2">
                                <strong>Description:</strong> @(playlistDetail.Description ?? "No description")
                            </p>
                            <p class="mb-2">
                                <strong>Tracks:</strong> @playlistDetail.TrackCount
                            </p>
                            <p class="mb-2">
                                <strong>Total Duration:</strong> @FormatDuration(playlistDetail.TotalDurationMs)
                            </p>
                            <p class="mb-0">
                                <strong>Type:</strong>
                                @if (playlistDetail.IsPublic)
                                {
                                    <span class="badge bg-light text-dark">Public</span>
                                }
                                else
                                {
                                    <span class="badge bg-dark">Private</span>
                                }
                                @if (IsGuid(playlistDetail.Id))
                                {
                                    <span class="badge bg-secondary ms-1"><i class="bi bi-laptop"></i> Local</span>
                                }
                                else
                                {
                                    <span class="badge bg-info ms-1"><i class="bi bi-spotify"></i> On Spotify</span>
                                }
                            </p>
                        </div>

                        @if (playlistDetail.Tracks.Any())
                        {
                            <h6 class="mt-3 mb-2">Tracks</h6>
                            <div class="table-responsive" style="max-height: 400px;">
                                <table class="table table-sm table-hover">
                                    <thead class="sticky-top bg-white">
                                        <tr>
                                            <th>#</th>
                                            <th>Title</th>
                                            <th>Artist(s)</th>
                                            <th>Album</th>
                                            <th>Duration</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < playlistDetail.Tracks.Count; i++)
                                        {
                                            var track = playlistDetail.Tracks[i];
                                            <tr>
                                                <td class="text-muted">@(i + 1)</td>
                                                <td>
                                                    <strong>@track.Name</strong>
                                                    @if (track.Explicit)
                                                    {
                                                        <span class="badge badge-sm bg-secondary ms-1">E</span>
                                                    }
                                                </td>
                                                <td>@string.Join(", ", track.Artists.Select(a => a.Name))</td>
                                                <td class="text-muted small">@track.AlbumName</td>
                                                <td class="text-muted small">@FormatDuration(track.DurationMs)</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">This playlist has no tracks.</p>
                        }
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseDetailModal">Close</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<PlaylistDto> playlists = new();
    private List<PlaylistDto> allPlaylists = new();
    private HashSet<string> syncingPlaylists = new();
    private bool isLoading = false;
    private string? errorMessage;
    private string? successMessage;

    // Search and filter
    private string searchQuery = string.Empty;
    private string filterType = "all";
    private string sortBy = "name";

    // Detail modal
    private PlaylistDto? selectedPlaylistForView;
    private PlaylistDetailDto? playlistDetail;
    private bool loadingDetail = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadPlaylists();
    }

    private async Task LoadPlaylists()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            allPlaylists = await PlaylistService.GetAllPlaylistsAsync();
            FilterPlaylists();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading playlists");
            errorMessage = "Failed to load playlists. Please try again.";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task RefreshPlaylists()
    {
        await LoadPlaylists();
        successMessage = "Playlists refreshed successfully.";
    }

    private async Task SyncPlaylistToSpotify(string playlistId)
    {
        syncingPlaylists.Add(playlistId);
        errorMessage = null;
        successMessage = null;

        try
        {
            var spotifyId = await PlaylistService.SyncPlaylistToSpotifyAsync(playlistId);
            successMessage = $"Playlist synced to Spotify successfully!";

            // Refresh playlists to show updated status
            await LoadPlaylists();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error syncing playlist {PlaylistId}", playlistId);
            errorMessage = $"Failed to sync playlist: {ex.Message}";
        }
        finally
        {
            syncingPlaylists.Remove(playlistId);
        }
    }

    private async Task ViewPlaylist(string playlistId)
    {
        selectedPlaylistForView = playlists.FirstOrDefault(p => p.Id == playlistId);
        if (selectedPlaylistForView == null) return;

        loadingDetail = true;
        playlistDetail = null;

        try
        {
            playlistDetail = await PlaylistService.GetPlaylistByIdAsync(playlistId);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading playlist details for {PlaylistId}", playlistId);
            errorMessage = "Failed to load playlist details.";
            selectedPlaylistForView = null;
        }
        finally
        {
            loadingDetail = false;
        }
    }

    private void CloseDetailModal()
    {
        selectedPlaylistForView = null;
        playlistDetail = null;
    }

    private async Task DeletePlaylist(string playlistId)
    {
        // TODO: Add confirmation dialog
        try
        {
            await PlaylistService.DeletePlaylistAsync(playlistId);
            successMessage = "Playlist deleted successfully.";
            await LoadPlaylists();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error deleting playlist {PlaylistId}", playlistId);
            errorMessage = "Failed to delete playlist. Please try again.";
        }
    }

    private void FilterPlaylists()
    {
        var filtered = allPlaylists.AsEnumerable();

        // Apply search filter
        if (!string.IsNullOrWhiteSpace(searchQuery))
        {
            filtered = filtered.Where(p =>
                p.Name.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                (p.Description?.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ?? false));
        }

        // Apply type filter
        filtered = filterType switch
        {
            "modified" => filtered.Where(p => HasUnsyncedChanges(p)),
            "local" => filtered.Where(p => IsGuid(p.Id)),
            "synced" => filtered.Where(p => !IsGuid(p.Id)),
            "empty" => filtered.Where(p => p.TrackCount == 0),
            _ => filtered
        };

        playlists = filtered.ToList();
        SortPlaylists();
    }

    private void SortPlaylists()
    {
        playlists = sortBy switch
        {
            "tracks" => playlists.OrderByDescending(p => p.TrackCount).ToList(),
            "type" => playlists.OrderBy(p => IsGuid(p.Id)).ThenBy(p => p.Name).ToList(),
            _ => playlists.OrderBy(p => p.Name).ToList()
        };
    }

    private void ClearSearch()
    {
        searchQuery = string.Empty;
        FilterPlaylists();
    }

    private string FormatDuration(int durationMs)
    {
        var timeSpan = TimeSpan.FromMilliseconds(durationMs);
        if (timeSpan.TotalHours >= 1)
        {
            return $"{(int)timeSpan.TotalHours}h {timeSpan.Minutes}m";
        }
        return $"{timeSpan.Minutes}m {timeSpan.Seconds}s";
    }

    private bool IsGuid(string id)
    {
        return Guid.TryParse(id, out _);
    }

    private bool HasUnsyncedChanges(PlaylistDto playlist)
    {
        return playlist.LastModifiedAt > playlist.LastSyncedAt;
    }
}
